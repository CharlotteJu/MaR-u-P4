<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Controler.Fragment.AddReunionFragment"

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_reunion_fragment"
        android:orientation="vertical"
        android:layout_margin="@dimen/text_margin">

        <!-- Subject -->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sujet de la rÃ©union"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/arf_subject_edit_text"/>


        <!-- Room -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salle"
            android:textSize="@dimen/title_size" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/arf_room"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date et heure"
            android:textSize="@dimen/title_size"/>


        <!-- Date and Hour -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Date"
                    android:gravity="center"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/arf_date_txt"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/arf_date"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Heure"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/arf_hours_txt"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/arf_hours_spinner"/>

            </LinearLayout>





        </LinearLayout>


        <!-- Mails -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participants"
            android:textSize="@dimen/title_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="eMail du Participant"
                android:layout_weight="1"
                android:id="@+id/arf_mail"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:id="@+id/arf_add_mails_button"/>

        </LinearLayout>

        <!-- List of mails -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/arf_liste_mails"/>

        </ScrollView>



        <!-- Final Button -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESERVER UNE REUNION"
            android:id="@+id/arf_final_button"/>


    </LinearLayout>


</ScrollView>